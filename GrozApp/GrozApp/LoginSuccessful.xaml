<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrozApp.LoginSuccessful">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Thông Báo" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center" FontSize="20" Margin="0, 0, 75, 0" />
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Đăng Nhập Thành Công" HorizontalOptions="Center" FontSize="30" TextColor="Green"
                   FontAttributes="Bold"/>
            <Button Text="Quay Về Trang Chủ" Clicked="cmdVeTrangChu" BackgroundColor="#ff8d15" 
                    TextColor="white" FontSize="20" FontAttributes="Bold" Margin="20,10,20,0" CornerRadius="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>